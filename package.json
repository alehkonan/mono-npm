{
  "name": "mono-npm",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "configs",
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "typecheck": "npm run typecheck --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "stylelint": "stylelint \"**/*.css\" --cache-location .cache -c configs/stylelint.config.js",
    "format": "prettier . -w -u --cache --config configs/.prettierrc.yml"
  }
}
